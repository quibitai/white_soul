{
  "functions": {
    "src/app/api/**/*.ts": {
      "maxDuration": 300,
      "runtime": "nodejs",
      "memory": 1024
    },
    "src/app/actions/**/*.ts": {
      "maxDuration": 300,
      "runtime": "nodejs", 
      "memory": 1024
    }
  },
  "env": {
    "FFMPEG_PATH": "/var/task/node_modules/ffmpeg-static/ffmpeg",
    "NODE_OPTIONS": "--dns-result-order=ipv4first"
  },
  "build": {
    "env": {
      "NEXT_TELEMETRY_DISABLED": "1"
    }
  },
  "regions": ["iad1"],
  "framework": "nextjs"
}
